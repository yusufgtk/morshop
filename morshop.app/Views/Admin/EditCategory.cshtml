@model CategoryModel

<div class="my-5 p-5 rounded-5" style="background-color: #512B81;">
    <form action="/admin/editcategory" method="post">
        <div asp-validation-summary="All" class="text-white"></div>

        <div class="form-group mb-4">
            <input hidden asp-for="Id" value="@Model.Id">
            <label class="mb-1 text-white" asp-for="Name ">Kategori Adı</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-white"></span>
        </div>
        <button type="submit" class="btn fw-semibold" style="background-color: #fff; color:#512B81;">Güncelle</button>
    </form>
</div>