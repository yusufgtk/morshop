@model List<RoleAssignModel>


<div class="my-5">
    <h1 class="h3 my-3" style="color: #512b81;">Rol Düzenle</h1>
    <form asp-controller="Admin" asp-action="UserRoleEdit" method="POST">
        <div class="row">
            @if(Model!=null)
            {
                @for(var i=0;i<Model.Count();i++)
                {   
                    <div class="col-sm-12 col-md-6 col-lg-3 col-xlg-4">
                        <div class="card border-3 mb-3" style="max-width: 18rem; border-color:#512b81">
                            <div class="card-header fs-5">@Model[i].RoleName</div>
                            <div class="card-body text-primary">
                                <input type="hidden" asp-for="@Model[i].RoleId">
                                <input type="hidden" asp-for="@Model[i].RoleName" value="@Model[i].RoleName">
                                <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input">
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    Rol bulunamadı!
                </div>
            }
            
        </div>
        <button type="submit" class="btn fw-semibold" style="background-color: #512B81; color:#fff;">Kaydet</button>
    </form>
</div>