@model AdminCategoryListComponent
@{
    var Categories = Model.Categories;
    var Message = Model.Message;
}

<div id="ProductList" class="my-5">

    @if(Message!=null)
    {
        <div class="alert alert-success" role="alert">
            @Message
        </div>
    }

    <div class="d-flex justify-content-between">
        <h3 style="color: #512B81;" class="fs-3 mb-3 mt-3">Kategori Listesi</h3>
        <a asp-controller="Admin" asp-action="AddCategory" class="btn mb-3 mt-3">Kategori Ekle <span class="fw-bolder">+</span></a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-white">Id</th>
                @* <th scope="col" class="text-white">Resim</th> *@
                <th scope="col" class="text-white">Kategori Adı</th>
                <th scope="col" class="text-white">Güncelle</th>
                <th scope="col" class="text-white">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var c in Categories)
            {
                <tr>
                    <th scope="row">@c.Id</th>
                    @* <td style="width: 150px; height: 175px;">
                        <img src="~/Images/@p.ImageUrl" alt="Resim" style="width: 150px; height: 175px;">
                    </td> *@
                    <td>@c.Name</td>
                    <td>
                        <a href="/admin/editcategory/@c.Id" class="btn btn-success">Güncelle</a>
                    </td>
                    <td>
                        <form asp-controller="Admin" asp-action="DeleteCategory" method="post">
                            <input type="number" hidden name="Id" value="@c.Id">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>