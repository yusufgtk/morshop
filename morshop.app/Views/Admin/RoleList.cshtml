@model List<IdentityRole>

<div id="ProductList" class="my-5">

    @if(@Model.Count()<=0)
    {
        <div class="alert alert-info" role="alert">
            Role bulunmamaktadır!
        </div>
    }

    <div class="d-flex justify-content-between">
        <h3 style="color: #512B81;" class="fs-3 mb-3 mt-3">Rol Listesi</h3>
        <a asp-controller="Admin" asp-action="CreateRole" class="btn mb-3 mt-3">Rol Ekle <span class="fw-bolder">+</span></a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-white" style="width: 150px;">Id</th>
                <th scope="col" class="text-white">Name</th>
                <th scope="col" class="text-white" style="width: 100px;">Güncelle</th>
                <th scope="col" class="text-white" style="width: 75px;">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model)
            {
                <tr>
                    <th scope="row">@role.Id</th>
                    <td>@role.Name</td>
                    <td>
                        <a href="/admin/roleedit/@role.Id" class="btn btn-success">Güncelle</a>
                    </td>
                    <td>
                        <form asp-controller="Admin" asp-action="RoleDelete" method="post">
                            <input type="text" hidden name="Id" value="@role.Id">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>