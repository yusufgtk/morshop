@model ResetPasswordModel
<div class="my-5 p-5 rounded-5" style="background-color: #512B81;">
    <h3 class="text-center text-white">Şifreni yenile</h3>
    <form action="/account/resetpassword" method="post">
        <div asp-validation-summary="All" class="text-white"></div>
        <input type="hidden"  value="@Model.Token" asp-for="Token">
        <div class="form-group mb-4">
            <label class="mb-1 text-white" asp-for="Email ">E-mail</label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-white"></span>
        </div>
        <div class="form-group mb-4">
            <label class="mb-1 text-white" asp-for="Password ">Şifre</label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-white"></span>
        </div>
        <button type="submit" class="btn fw-semibold me-2" style="background-color: #fff; color:#512B81;">Şifremi yenile</button>
    </form>
</div>
